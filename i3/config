# https://i3wm.org/docs/userguide.html
# Mod4 = Super
# Mod1 = Alt
set $mod Mod4

# Font for window titles and i3 bar
font pango:Liberation Mono 10

# drag floating windows
floating_modifier mod1

# kill focused window
bindsym $mod+c kill

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window:
bindsym $mod+mod1+Left move left
bindsym $mod+mod1+Down move down
bindsym $mod+mod1+Up move up
bindsym $mod+mod1+Right move right

# h = vertical ; v = horizontal
# split horizontal, vertical, toggle
bindsym $mod+b split v
bindsym $mod+v split h
bindsym $mod+t split toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling, floating
bindsym $mod+mod1+space floating toggle

# switch to workspace
#bindsym mod1+2 workspace 2: manga
bindsym $mod+1 workspace 01
bindsym $mod+2 workspace 02
bindsym $mod+3 workspace 03
bindsym $mod+4 workspace 04
bindsym $mod+5 workspace 05
bindsym $mod+6 workspace 06
bindsym $mod+7 workspace 07
bindsym $mod+8 workspace 08
bindsym $mod+9 workspace 09
bindsym $mod+0 workspace 10
bindsym $mod+Control+1 workspace 11
bindsym $mod+Control+2 workspace 12
bindsym $mod+Control+3 workspace 13
bindsym $mod+Control+4 workspace 14
bindsym $mod+Control+5 workspace 15
bindsym $mod+Control+6 workspace 16
bindsym $mod+Control+7 workspace 17
bindsym $mod+Control+8 workspace 18
bindsym $mod+Control+9 workspace 19
bindsym $mod+Control+0 workspace 20

# move focused container to workspace
bindsym $mod+mod1+1 move container to workspace 01
bindsym $mod+mod1+2 move container to workspace 02
bindsym $mod+mod1+3 move container to workspace 03
bindsym $mod+mod1+4 move container to workspace 04
bindsym $mod+mod1+5 move container to workspace 05
bindsym $mod+mod1+6 move container to workspace 06
bindsym $mod+mod1+7 move container to workspace 07
bindsym $mod+mod1+8 move container to workspace 08
bindsym $mod+mod1+9 move container to workspace 09
bindsym $mod+mod1+0 move container to workspace 10
bindsym $mod+Control+mod1+1 move container to workspace 11
bindsym $mod+Control+mod1+2 move container to workspace 12
bindsym $mod+Control+mod1+3 move container to workspace 13
bindsym $mod+Control+mod1+4 move container to workspace 14
bindsym $mod+Control+mod1+5 move container to workspace 15
bindsym $mod+Control+mod1+6 move container to workspace 16
bindsym $mod+Control+mod1+7 move container to workspace 17
bindsym $mod+Control+mod1+8 move container to workspace 18
bindsym $mod+Control+mod1+9 move container to workspace 19
bindsym $mod+Control+mod1+0 move container to workspace 20

# reload configuration file, restart inplace
bindsym $mod+mod1+c reload
bindsym $mod+mod1+r restart

# exit i3
#bindsym $mod+mod1+e exec "i3-nagbar -t warning -m 'Exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window keyboard
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        # exit resize
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar
bar {
	status_command i3status
}

# user
# keyboard stuff
bindsym $mod+d exec --no-startup-id rofi -show run
#bindsym $mod+d exec --no-startup-id dmenu_run -fn 'Liberation Mono 10' -i -nf '#ffffff' -sf '#ffffff' -sb '#c80003' -nb '#1b1b1b'
bindsym --release Print exec --no-startup-id /usr/local/bin/snip
bindsym --release $mod+Print exec --no-startup-id /usr/local/bin/snip-root
bindsym --release $mod+Return exec terminator
bindsym --release $mod+mod1+Return exec terminator --layout=tag4 --profile=tag4
bindsym --release $mod+mod1+a exec --no-startup-id /usr/local/bin/mpv-link
bindsym --release Pause exec --no-startup-id /usr/local/bin/desktop-pause -a
bindsym --release $mod+F9 exec --no-startup-id /usr/local/bin/mpc-play-pause
#bindsym --release $mod+F10 exec --no-startup-id /usr/local/bin/mpc-play-pause
bindsym --release $mod+F10 exec --no-startup-id mpc random
bindsym --release $mod+F11 exec --no-startup-id mpc prev
bindsym --release $mod+F12 exec --no-startup-id mpc next
#bindsym --release $mod+F11 exec --no-startup-id mpc -h /rum/mpd.socket prev
#bindsym --release $mod+F12 exec --no-startup-id mpc -h /run/mpd.socket next
#bindsym --release $mod+mod1+ exec --no-startup-id
#bindsym --release $mod+mod1+ exec --no-startup-id
#bindsym --release $mod+mod1+ exec --no-startup-id

